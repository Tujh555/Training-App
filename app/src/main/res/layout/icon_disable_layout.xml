<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/iconLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="16dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/createText">

    <ImageView
        android:id="@+id/backgroundIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/icon_background_second"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_baseline_book_24"
        app:layout_constraintBottom_toBottomOf="@id/backgroundIcon"
        app:layout_constraintEnd_toEndOf="@id/backgroundIcon"
        app:layout_constraintStart_toStartOf="@+id/backgroundIcon"
        app:layout_constraintTop_toTopOf="@id/backgroundIcon" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/backgroundIcon"
        tools:text="Album" />

</androidx.constraintlayout.widget.ConstraintLayout>